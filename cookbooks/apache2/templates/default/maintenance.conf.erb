NameVirtualHost *
<VirtualHost *>
	DocumentRoot <%= @node[:apache][:maintenance_root] %>

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory <%= @node[:apache][:maintenance_root] %>>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order Allow,Deny
		Allow from All

                RewriteEngine On
                RewriteRule (.*) index.html
	</Directory>
</VirtualHost>